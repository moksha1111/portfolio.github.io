<div class="container newest-drugs personInfo accountCSS">
  <div class="row"> 
    <h2>- Account Details</h2>
    <% if (info != null) { %>
      <div class="col-12 col-md-8">
        <div class="col-12"><h4> Name: <%- info.firstname  %></h4></div>
      </div>
      <div class="col-12 col-md-8">
        <div class="col-12"><h4> Email: <%- info.email  %></h4></div>
      </div>
      <div class="d-flex flex-row align-items-center mb-4">
        <div class="form-group span">
          <input type="password" class="form-control" required="required" autocomplete="off" value="" name="oldpassword" size="30">
          <span>Old Password</span>
        </div>
      </div>
      <div class="d-flex flex-row align-items-center mb-4">
        <div class="form-group span">
          <input type="password" class="form-control" required="required" autocomplete="off" value="" name="newpassword" size="30">
          <span>New Password</span>
        </div>
      </div>
      <div class="d-flex flex-row align-items-center mb-4">
        <div class="form-group span">
          <input type="password" class="form-control" required="required" autocomplete="off" value="" name="cnewpassword" size="30">
          <span>Confirm Password</span>
        </div>
      </div>
      <div class="justify-content-cente">
        <input id="btnChangePassword" type="submit" class="btn btn-primary btn-lg" value="Submit">
      </div>
    <% } else { %>
      <p>You have to log in first</p>
    <% } %>
      
  </div>
</div>

<%- contentFor('head') %>
<%- include("../partials/head.ejs") %>

<%- contentFor('header') %>
<%- include('../partials/header.ejs') %>

<%- contentFor('footer') %>
<%- include("../partials/footer.ejs") %>

<%- contentFor('globalscript') %>
<%- include("../partials/globalscript.ejs") %>

<%- contentFor('script') %>
<script src="/js/script/account.js"></script>