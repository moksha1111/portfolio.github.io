<div class="container checkout checkoutCSS">
  <div class="row">
    <div class="col-12 text-center" style="text-decoration: underline;">
      <h2>Checkout</h2>
    </div>
      <div class="col-md-8">
        <div class="addressInfo">
          <h3>Shipping details:</h3>
          <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-group span">
              <input type="text" class="form-control" required="required" autocomplete="off" value="" name="fullname" size="30">
              <span>Full Name</span>
            </div>
          </div>
          <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-group span">
              <input type="text" class="form-control" required="required" autocomplete="off" value="" name="phonenumber" size="30">
              <span>Phone Number</span>
            </div>
          </div>
          <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-group span">
              <input type="text" class="form-control" required="required" autocomplete="off" value="" name="streetaddress" size="30">
              <span>Street Address</span>
            </div>
          </div>
          <div class="d-flex flex-row align-items-center mb-4">
            <div class="form-group span">
              <input type="text" class="form-control" required="required" autocomplete="off" value="" name="buildingfloor" size="30">
              <span>Building, floor</span>
            </div>
          </div>
        </div>
        <div class="paymentMethod">
          <h3>Payment method:</h3>
            <input type="radio" id="cashondelivery" autocomplete="off" name="fav_language" value="Cash on delivery">
            <label for="cashondelivery">Cash on delivery</label><br>
            <input type="radio" id="neverdelivered1" autocomplete="off" name="fav_language" value="Never delivered (test)">
            <label for="neverdelivered1">Never delivered (test)</label><br>
            <input type="radio" id="neverdelivered2" autocomplete="off" name="fav_language" value="Never delivered (test)">
            <label for="neverdelivered2">Never delivered (test)</label><br>
            <input type="radio" id="neverdelivered3" autocomplete="off" name="fav_language" value="Never delivered (test)">
            <label for="neverdelivered3">Never delivered (test)</label><br>
        </div>
        <div class="comment">
          <h3>Comment:</h3>
            <textarea id="w3review" name="comment" autocomplete="off" rows="4" cols="50"></textarea>
        </div>
      </div>
      <div class="col-md-4">
        <% if (total > 0) { %>
          <div class="cartSummaryContainer">
            <h3>Cart Summary</h3>
            <p id="subTotal">Total Price: <%= total %> EGP</p>
          </div> 
          <div class="justify-content-center mt-3 mb-3 mb-lg-4">
            <input id="btnCheckout" type="submit" class="btn btn-primary btn-lg" value="Place your order">
          </div>
          <% } %>
      </div>
  </div>
</div>

<%- contentFor('head') %>
<%- include("../partials/head.ejs") %>

<%- contentFor('header') %>
<%- include('../partials/header.ejs') %>

<%- contentFor('footer') %>
<%- include("../partials/footer.ejs") %>

<%- contentFor('globalscript') %>
<%- include("../partials/globalscript.ejs") %>

<%- contentFor('script') %>
<script src="/js/script/checkout.js"></script>
