<section style="height: 80vh !important; background-color: #eee;">
  <div class="container h-100 login">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px; margin-top: 100px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-4">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>

                    <div class="form-group mb-4 span">
                      <input type="login" required="required" class="form-control" autocomplete="off" value="" name="email" size="40px" style="padding: 12px;">
                      <span>Your Email</span>
                    </div>

                    <div class="form-group mb-4 span">
                      <input type="password" required="required" class="form-control" autocomplete="off" value="" name="password" size="40px" style="padding: 12px;">
                      <span>Password</span>
                    </div>

                  <div class="mb-4">
                    <input id="btnLogin" type="submit" class="btn btn-primary btn-lg" value="Login" style="width: 100%;">
                  </div>


              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- contentFor('head') %>
<%- include("../partials/head.ejs") %>

<%- contentFor('header') %>
<%- include('../partials/header.ejs') %>

<%- contentFor('footer') %>
<%- include("../partials/footer.ejs") %>

<%- contentFor('globalscript') %>
<%- include("../partials/globalscript.ejs") %>

<%- contentFor('script') %>
<script src="/js/script/login.js"></script>
